<!--pages/list/index.wxml-->
<scroll-view
  class='container'
  style="height: {{windowHeight}}px"
  scroll-y="true"
  bindscrolltolower='toBottom'
>
  <c-navBar class='nav' />
  <!-- tuijian -->
  <c-recommend recommend="{{recommend}}" />
  <c-tagList class='tagList' tagList="{{tagList}}">
    <c-add slot='add' class='add'>+</c-add>
    <view slot='more' class='more' catch:tap='toCatelog'>•••</view>
  </c-tagList>


  <!-- liebiao -->
  <c-articleList
    class='articleList'
    loadMore="{{loadMore}}"
    article-list="{{articleList}}"
  />
</scroll-view>
