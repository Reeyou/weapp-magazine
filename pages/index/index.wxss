/* tuijian */
.recommend-container {
  padding: 0 25rpx;
}
.article {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 0 40rpx 0;
}
.date {
  font-size: 50rpx;
  letter-spacing: 6rpx;
  position: relative;
}
.date:after {
  position: absolute;
  content: '';
  width: 200rpx;
  height: 4rpx;
  background: #999;
  bottom: -14rpx;
  left: 0;
}
.title {
  margin-top: 30rpx;
  font-size: 30rpx;
  line-height: 50rpx;
  text-align: center;
}
.img {
  margin-top: 20rpx;
  width: 700rpx;
}

.recommend-box {

}
.recommend-box text {
  display: inline-block;
  padding: 14rpx 20rpx;
  font-size: 24rpx;
  border-radius: 10rpx;
  border: 2rpx solid black;
  margin: 0 20rpx 40rpx 0;
}
.recommend-box text:first-child {
  background: #000;
  color: #fff;
  font-weight: bold;
}

