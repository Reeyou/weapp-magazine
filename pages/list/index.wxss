/* pages/list/index.wxss */
.container {
  
}

/* tuijian */
.recommend-container {
  padding: 0 25rpx;
}
.article {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 0 40rpx 0;
}
.date {
  font-size: 50rpx;
  letter-spacing: 6rpx;
  position: relative;
}
.date:after {
  position: absolute;
  content: '';
  width: 200rpx;
  height: 4rpx;
  background: #999;
  bottom: -14rpx;
  left: 0;
}
.title {
  margin-top: 30rpx;
  font-size: 30rpx;
  line-height: 50rpx;
  text-align: center;
}
.img {
  margin-top: 20rpx;
  width: 700rpx;
}

.recommend-box {

}
.recommend-box text {
  display: inline-block;
  padding: 14rpx 20rpx;
  font-size: 24rpx;
  border-radius: 10rpx;
  border: 2rpx solid black;
  margin: 0 20rpx 40rpx 0;
}
.recommend-box text:first-child {
  background: #000;
  color: #fff;
  font-weight: bold;
}

/* liebiao */
.recommend-list-container {
  background: #ebebeb;
  padding: 20rpx 0 0 0;
}
.pre-article {
  background: #fff;
  padding: 0 20rpx 20rpx 20rpx;
}
.article-head {
  padding: 16rpx 0;
}
.article-head image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 1px solid rgba(0,0,0,.78);
  margin: 0 16rpx 0 0;
  vertical-align: middle;
}
.article-head text {
  font-size: 28rpx;
  color: rgba(0,0,0,.88)
}
.article-cover {
  font-size: 0;
}
.article-cover image {
  width: 100%;
  
}
.article-title {
  font-size: 34rpx;
  font-weight: bold;
  line-height: 48rpx;
  padding: 24rpx 0;
}
.article-handle-box {
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
}
.article-review text {
  font-size: 26rpx;
  border: 1px solid black;
  border-radius: 6rpx;
  padding: 14rpx 24rpx;
}
.article-handle {
  display: flex;
}
.article-handle image{
  width: 40rpx;
  height: 40rpx;
  margin-left: 10rpx;
  vertical-align: middle;
}
.article-handle button:after {
  border: none;
}
.article-handle button {
  position: relative;
  bottom: 28rpx;
  width: 70rpx;
  height: 70rpx;
  padding: 0;
  background: transparent;
  margin-left: 10rpx;
}
.article-handle button image {
  margin-left: 0;
}