<!--pages/list/index.wxml-->
<view class='container'>

  <!-- tuijian -->
  <view class='recommend-container'>
    <view class='article'>
      <text class="date">{{date}}</text>
      <text class='title'>{{title}}</text>
      <image class='img' mode='widthFix' src='{{imgSrc}}' />
    </view>

    <view class='recommend-box'>
      <text>+</text>
      <text wx:for="{{labelList}}">{{item.type}}</text>
      <text>•••</text>
    </view>
  </view>

  <!-- liebiao -->
  <view class='recommend-list-container'>
    <view class='pre-article'>
      <view class='article-head'>
        <image src='/assets/image/avatar.png'/>
        <text>reeyou</text>
        <text>等</text>
        <text>96</text>
        <text>人马克了</text>
      </view>
      <view class='article-cover'>
        <image mode='widthFix' src='/assets/image/list/article/1.png'/>
      </view>
      <view class='article-title'>
        <text>不伦之吻，吻背后的令人惊令人惊令人惊讶的往事</text>
      </view>
      <view class='article-handle-box'>
        <view class='article-review'>
          <text>深度阅读</text>
        </view>
        <view class='article-handle'>
          <image src='/assets/image/icon/icon_more.png'/>
          <image src='/assets/image/icon/icon_relay.png'/>
          <image src='/assets/image/icon/icon_circle.png'/>
        </view>
      </view>
    </view>
  </view>
