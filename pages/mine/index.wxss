.container {
  display: flex;
  flex-direction: column;
  padding: 0 30rpx;
  background-color: #fff;
}

.userInfo {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 50rpx;
}

.name {
  font-size: 40rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
}

.avatar image{
  width: 100rpx;
  height: 100rpx;
}

.share {
  width: 50rpx;
  height: 50rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.share image {
  width: 50rpx;
  height: 50rpx;
}
.getuserInfo {
  margin: 0;
  padding: 0;
}