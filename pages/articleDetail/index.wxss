.media_container {
  width: 700rpx;
}
/* swiper */
.swiper {
  width: 700rpx;
  height: 426rpx;
}
.swiper_item image{
  width: 640rpx;
  height: 426rpx;
  border-radius: 10rpx;
}
/* video */
.video {
  width: 700rpx;
  height: 400rpx;
}
.controls {
  position: relative;
  width: 700rpx;
  height: 400rpx;
}
.controls_box {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 100rpx;
  height: 100rpx;
  transform: translate(-50%, -50%);
  background: rgba(0,0,0,.68);
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.controls_box cover-image {
  width: 40rpx;
  height: 40rpx;
  margin-top: 16rpx;
}
.time {
  font-size: 28rpx;
  color: #fff;
}

/* audio */
.container {
  height: 260rpx;
  display: flex;
  align-items: center;
  background: #fdfdfd;
  border: 1px solid #f2f2f2;
  border-radius: 6rpx;
  padding: 0 40rpx;
}
.audio_control {
  /* flex: 0 0 60rpx; */
  margin-right: 40rpx;
}
.audio_control image{
  width: 60rpx;
  height: 60rpx;
}
.audio_container {
  /* flex: 0 0 auto; */
}
.audio_info {
  
}
.audio_info .audio_title{
  font-size: 36rpx;
  font-weight: bold;
  display: block;
}
.audio_info .audio_from {
  font-size: 26rpx;
  color: #ccc;
}
.audio_progress {
  position: relative;
  /* width: 520rpx; */
  margin: 20rpx 0;
}
.audio_progress .progress_circle {
  position: absolute;
  left: 0;
  top: 50%;
  height: 20rpx;
  border-radius: 50%;
  transform: translate(0, -50%);
  background: #00b26a;
}
.duration {
  display: flex;
  justify-content: space-between;
}
.duration text {
  font-size: 20rpx;
  color: #ccc
}

.content {
  padding: 20rpx 0;
  font-size: 32rpx;
  letter-spacing: 1rpx;
  line-height: 44rpx;
  text-indent: 2em;
  line-height: 44rpx;
}
.read_container {
  margin-top: 24rpx;
  font-size: 24rpx;
}
