.container {

}
.ball {
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  background: #ed5565;
  border-radius: 50%;
  margin-right: 10rpx;
  animation-fill-mode: both;
  animation: ball 1s 0s infinite ;
}
.ball:nth-child(1) {
  
}
.ball:nth-child(2) {
  animation-delay: 0.24s;
}
.ball:nth-child(3) {
  animation-delay: 0.48s;
  margin-right: 0;
}

@keyframes ball {
  0% {
    transform: scale(1);
    opacity: 0;
  }
  45% {
    transform: scale(0.1);
    opacity: 0.68;
  }
  100% {
    transform: scale(1);
    opacity : 1
  }
}