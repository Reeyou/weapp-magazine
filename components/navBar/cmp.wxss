.container {
  box-sizing: border-box;
  width: 750rpx;
  padding: 25rpx;
  background: #fff;
  white-space: nowrap;
  text-align: center;
}
.nav {
  font-size: 36rpx;
  color: #888;
  padding: 0 30rpx;
}
.active {
  color: #000;
  position: relative;
}
.active:after {
  content: '';
  position: absolute;
  bottom: -28rpx;
  left: 10rpx;
  width: 100rpx;
  height: 6rpx;
  background: #000;
  z-index: 999;
}