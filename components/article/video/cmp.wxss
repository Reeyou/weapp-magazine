.container {
  background: #fff;
  position: relative;
}
.container video {
  width: 700rpx;
  height: 400rpx;
}
.img_container {
  width: 700rpx;
  height: 400rpx;
  position: absolute;
  top: 0;
  left: 0;
  /* padding: 0 25rpx; */
}
.img_container .poster {
  width: 100%;
  height: 100%;
}
.play_container {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 100rpx;
  height: 100rpx;
  transform: translate(-50%, -50%);
  border-radius: 50%;
  background: rgba(0,0,0,.68);
  display: flex;
  flex-direction: column;
  align-items: center;
}
.play_container .play_img {
  width: 30rpx;
  height: 30rpx;
  margin-top: 20rpx;
}
.play_text {
  font-size: 24rpx;
  color: #fff;
}
.main_title {
  font-size: 36rpx;
  font-weight: bold;
}
.mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 1334rpx;
  background: rgba(0,0,0,.48);
}